<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape android:shape="rectangle">

            <gradient
                android:type="sweep"
                android:gradientRadius="120dp"
                android:startColor="@android:color/holo_blue_bright"
                android:centerColor="@android:color/holo_blue_dark"
                android:endColor="@android:color/holo_blue_bright"/>

            <stroke android:width="10dp"
                android:dashGap="1dp"
                android:dashWidth="15dp"
                android:color="@color/colorPrimaryDark"/>

            <!--<corners android:radius="50dp"></corners>-->
            <!-- <solid android:color="@color/colorGreenDark"/>-->

        </shape>

    </item>
</selector>