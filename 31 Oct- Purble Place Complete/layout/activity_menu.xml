<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bmpl.purbleplace.MenuActivity"
    android:padding="@dimen/padding"
    android:background="@drawable/background_one">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"/>

    <ImageButton
        android:background="@drawable/background_button"
        android:id="@+id/playImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/play"
        android:scaleType="center"
        android:paddingTop="@dimen/paddingtop"/>

    <ImageButton
        android:layout_marginTop="@dimen/paddingtop"
        android:paddingTop="@dimen/paddingtop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playImageButton"
        android:background="@drawable/background_button"
        android:layout_centerHorizontal="true"
        android:id="@+id/highScoreImageButton"
        android:src="@drawable/highscore"/>

    <ImageButton
        android:layout_marginTop="@dimen/paddingtop"
        android:paddingTop="@dimen/paddingtop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:layout_below="@+id/highScoreImageButton"
        android:layout_centerHorizontal="true"
        android:src="@drawable/settings"
        android:id="@+id/settingsImageButton"/>

</RelativeLayout>
